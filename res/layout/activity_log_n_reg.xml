<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@android:color/darker_gray"    
    >

    <EditText
        android:id="@+id/email_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Email"
        android:textColorHint="@color/White" 
        android:textColor="@color/White"      
        android:inputType="textEmailAddress"
        >
        <requestFocus />
    </EditText>
    
    <EditText
        android:id="@+id/pw_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email_login"
        android:layout_alignRight="@+id/email_login"
        android:layout_below="@+id/email_login"
        android:ems="10"
        android:hint="Password"
        android:textColorHint="@color/White" 
        android:textColor="@color/White"              
        android:inputType="textPassword" 
        />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pw_login"
        android:layout_alignRight="@+id/pw_login"
        android:layout_below="@+id/pw_login"
        android:text="Login" 
        android:textColor="@color/White"        
        />

    <EditText
        android:id="@+id/email_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login"
        android:layout_below="@+id/login"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" 
        android:textColorHint="@color/White" 
        android:textColor="@color/White" 
        />

    <EditText
        android:id="@+id/pw_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email_reg"
        android:layout_alignRight="@+id/email_reg"
        android:layout_below="@+id/email_reg"
        android:ems="10"
        android:hint="Enter Password"
        android:textColorHint="@color/White"     
        android:textColor="@color/White"     
        android:inputType="textPassword" 
        />

    <EditText
        android:id="@+id/pw_reg_retype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pw_reg"
        android:layout_alignRight="@+id/pw_reg"
        android:layout_below="@+id/pw_reg"
        android:ems="10"
        android:hint="Retype Password"
        android:textColorHint="@color/White"  
        android:textColor="@color/White"     
        android:inputType="textPassword" 
        />

    <Button
        android:id="@+id/regiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pw_reg_retype"
        android:layout_alignRight="@+id/pw_reg_retype"
        android:layout_below="@+id/pw_reg_retype"
        android:text="Regiter" 
        android:textColor="@color/White" 
        />

</RelativeLayout>
