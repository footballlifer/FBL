<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nanofuntas.fbl"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="nanofuntas.fbl.LogNRegActivity"
            android:label="@string/title_activity_log_n_reg" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="nanofuntas.fbl.TabViewActivity"
            android:label="@string/title_activity_tabview" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="nanofuntas.fbl.PlayerRatingActivity"
            android:label="@string/title_activity_player_rating" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="nanofuntas.fbl.ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name="nanofuntas.fbl.TacticBoard"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="nanofuntas.fbl.ImageActivity"
            android:label="@string/title_activity_image" >
        </activity>
        <activity
            android:name="nanofuntas.fbl.MyProfileUpdate"
            android:label="@string/title_activity_my_profile_update" 
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>